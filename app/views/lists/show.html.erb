
<div class="banner" style="background: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80') no-repeat center bottom fixed;">
  <div class="container">
    <h1>Lista: <%= @list.name %></h1>
    <p>Add your favorite movies!</p>
  <%= link_to "Add Movie", new_list_bookmark_path(@list), class:"btn-add" %>
  </div>
</div>

<div class="container">

  <div class="cards">

    <% @list.movies.each do |movie| %>

        <div class="card-movie">
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <%= image_tag movie.poster_url, alt: movie.title %>
            <div class="card-movie-infos">
              <h2><%= movie.title %></h2>
              <span class="rating"> <strong>Rating:</strong> <%= movie.rating %></span>
              <p><%= movie.overview %></p>
              <p><strong>Coment√°rios:</strong></p>
              <p><%= bookmark.comment %></p>
              <%= button_to "Delete", bookmark_path(bookmark), method: :delete, class:"btn btn-delete" %>
            </div>
        </div>
    <% end %>
  </div>
  <%= button_to "Delete List", list_path(@list), method: :delete, class:"btn btn-delete-list" %>

</div>
